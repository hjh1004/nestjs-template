{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json",
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "jest": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "indent": [
            "error",
            2,
            {
                "MemberExpression": 1
            }
        ],
        "@typescript-eslint/semi": [
            "error",
            "always"
        ]
    }
}